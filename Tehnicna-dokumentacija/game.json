{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://roboliga.raptorpond.com/game.json",
  "title": "Game",
  "description": "Describes the game state.",
  "type": "object",
  "properties": {
    "game_on": {
      "type": "boolean"
    },
    "score": {
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "time_left": {
      "type": "number"
    },
    "field": {
      "description": "Describes the playing field",
      "type": "object",
      "properties": {
        "top_left": {
          "$ref": "#/definitions/position"
        },
        "bottom_right": {
          "$ref": "#/definitions/position"
        },
        "baskets": {
          "type": "array",
          "items": {
            "description": "Basket; target area",
            "type": "object",
            "properties": {
              "team": {
                "type": "integer"
              },
              "top_left": {
                "$ref": "#/definitions/position"
              },
              "bottom_right": {
                "$ref": "#/definitions/position"
              }
            },
            "required": [
              "top_left",
              "bottom_right",
              "team"
            ]
          }
        },
        "apples": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/apple"
          }
        }
      },
      "required": [
        "top_left",
        "bottom_right",
        "baskets",
        "apples"
      ]
    },
    "bots": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/bot"
      },
      "uniqueItems": true
    }
  },
  "definitions": {
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number",
          "minimum": 0
        },
        "y": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": [
        "x",
        "y"
      ]
    },
    "apple": {
      "type": "object",
      "properties": {
        "color": {
          "type": "string",
          "enum": [
            "red",
            "brown"
          ]
        },
        "x": {
          "type": "number",
          "minimum": 0
        },
        "y": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": [
        "color",
        "x",
        "y"
      ]
    },
    "bot": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "team": {
          "type": "integer"
        },
        "x": {
          "type": "number",
          "minimum": 0
        },
        "y": {
          "type": "number",
          "minimum": 0
        },
        "orientation": {
          "type": "number",
          "minimum": 0,
          "exclusiveMaximum": 360
        }
      },
      "required": [
        "id",
        "team",
        "x",
        "y",
        "orientation"
      ]
    }
  },
  "required": [
    "score",
    "game_on",
    "time_left",
    "field",
    "bots"
  ]
}
